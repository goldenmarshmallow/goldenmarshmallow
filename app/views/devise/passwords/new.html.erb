
<div class="container">
	<div class="row">
		<div class="col-md-6 ml-auto mr-auto card form">
			<h2>Forgot your password?</h2>
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>
				<p class="ml-auto">Enter your email to receive a password reset link</p>
			  <div class="field">
			    <%= f.label :email %><br />
			    <%= f.email_field :email, autofocus: true, size: 40  %>
			  </div>
			  <br>
			  <div class="actions">
			    <%= f.submit "Send Reset Link", class: 'btn btn-primary' %>
			  </div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>




