<br />
<div class="frosty col-xs-10 offset-xs-1 col-md-4 offset-md-4">
	<br />
	<h2 class='text-center'>Forgot your password?</h2>
	<br />
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>
		<p class="ml-auto">Enter your email to receive a password reset link</p>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true, size: 40  %>
	  </div>
	  <br />
	  <div class="actions">
	    <%= f.submit "Send Reset Link", class: 'btn btn-success' %>
	  </div>
		<br />
	<% end %>

	<%= render "devise/shared/links" %>
</div>
