<br />
<h1 class="text-center title"><%= current_game.name %></h1>
<br />
<table class="chess_table text-center">
  <% 7.downto(0).each do |row_number| %>
    <tr>
      <% 0.upto(7).each do |column_number| %>
        <td class="<%= (row_number + column_number).even? ? "black_space" : "white_space"%>">
          <%= link_to game_piece_path(current_game, @piece, params: {row: row_number, column: column_number}), method: :patch do %>
            <% piece = current_game.pieces.find_by(x_position: column_number, y_position: row_number) %>
            <% if piece && current_piece == piece %>
              <p class='piece highlight'><%= piece.to_unicode %></p>
            <% elsif piece %>
              <p class='piece'><%= piece.to_unicode %></p>
            <% elsif piece.nil? %>
              <i class='fa fa-check fa-3x circle'></i>
            <% end %>
          <% end %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
